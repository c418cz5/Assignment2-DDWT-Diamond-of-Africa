@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	Page.Title = "Add New Show";
}

<div class="container mt-4">
	<h1>Add New Show</h1>

	@if (TempData["Error"] != null)
	{
		<div class="alert alert-danger">@TempData["Error"]</div>
	}
	@if (TempData["Success"] != null)
	{
		<div class="alert alert-success">@TempData["Success"]</div>
	}

	<form method="post" action="@Url.Action("AddShow", "Home")" class="row g-3 mt-3">
		<div class="col-md-6">
			<label class="form-label">Show Title *</label>
			<input type="text" name="title" class="form-control" required>
		</div>


		<div class="col-md-3">
			<label class="form-label">Release Year</label>
			<input type="number" name="releaseYear" class="form-control" min="1900" max="@DateTime.Now.Year">
		</div>


		<div class="col-md-3">
			<label class="form-label">Rating (0-10)</label>
			<input type="number" name="rating" class="form-control" min="0" max="10" step="0.5">
		</div>

		<div class="col-md-12">
			<label class="form-label">Genre *</label>
			<div class="row">
				@foreach (var genre in ViewBag.Genres)
				{
					<div class="col-md-3">
						<div class="form-check">
							<input class="form-check-input" type="checkbox" name="genreIds" value="@genre.genreId" id="genre_@genre.genreId">
							<label class="form-check-label" for="genre_@genre.genreId">@genre.genre</label>
						</div>
					</div>
				}
			</div>
		</div>

		<div class="col-md-12">
			<label class="form-label">Director</label>
			<div class="row g-3">
				<div class="col-md-6">
					<select name="existingDirectorId" class="form-control">
						<option value="">Select Existing Director</option>
						@foreach (var dir in ViewBag.Directors)
						{
							<option value="@dir.directorId">@dir.directorName</option>
						}
					</select>
				</div>
				<div class="col-md-6">
					<input type="text" name="newDirectorName" class="form-control" placeholder="Or enter new director name">
				</div>
			</div>
		</div>

		<div class="col-md-12">
			<label class="form-label">Cast *</label>
			<div class="row">
				@foreach (var cast in ViewBag.Casts)
				{
					<div class="col-md-3">
						<div class="form-check">
							<input class="form-check-input" type="checkbox" name="castIds" value="@cast.castId" id="cast_@cast.castId" required>
							<label class="form-check-label" for="cast_@cast.castId">@cast.castName</label>
						</div>
					</div>
				}
			</div>
		</div>

		<div class="col-md-12">
			<button type="submit" class="btn btn-success">Add Show</button>
			<a href="@Url.Action("Index", "Home")" class="btn btn-secondary ms-2">Cancel</a>
		</div>
	</form>
</div>
